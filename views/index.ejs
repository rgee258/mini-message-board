<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <div class="message-display">
      <% for(let i = 0; i < messages.length; i++) { %>
        <div class="message">
          <div class="content">
            <p><%= messages[i].text %></p>
          </div>
          <div class="info">
            <span><%= messages[i].user %></span>
            <span><%= messages[i].added %></span>
          </div>
        </div>
      <% } %>
    </div>
  </body>
</html>
